{% extends 'back/base_back.html.twig' %}

{% block title %}Constat index{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">listes des constats</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">


                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date_incident</th>
                        <th>Heure_incident</th>
                        <th>Description</th>
                        <th>Cordonnées_des_conducteurs</th>
                        <th>Images_de_deux_véhicules_accidentées</th>
                        <th>Témoins</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for constat in constats %}
                        <tr>
                            <td>{{ constat.id }}</td>
                            <td>{{ constat.dateIncident ? constat.dateIncident|date('Y-m-d') : '' }}</td>
                            <td>{{ constat.heureIncident ? constat.heureIncident|date('Y-m-d') : '' }}</td>
                            <td>{{ constat.description }}</td>
                            <td>{{ constat.cordonneesDesConducteurs }}</td>
                            <td>{{ constat.imagesDeDeuxVehiculesAccidentees }}</td>
                            <td>{{ constat.temoins }}</td>
                            <td>
                                <a href="{{ path('back_showconstat', {'id': constat.id}) }}">show</a>
                                <a href="{{ path('back_editconstat', {'id': constat.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>



            </div>
        </div>
    </div>


{% endblock %}
