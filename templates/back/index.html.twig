{% extends 'back/base_back.html.twig' %}

{% block title %}Constat{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">listes des constats</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">


            <div class="table-responsive">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ constat.id }}</td>
                    </tr>
                    <tr>
                        <th>Date_incident</th>
                        <td>{{ constat.dateIncident ? constat.dateIncident|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Heure_incident</th>
                        <td>{{ constat.heureIncident ? constat.heureIncident|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ constat.description }}</td>
                    </tr>
                    <tr>
                        <th>Cordonnées_des_conducteurs</th>
                        <td>{{ constat.cordonneesDesConducteurs }}</td>
                    </tr>
                    <tr>
                        <th>Images_de_deux_véhicules_accidentées</th>
                        <td>{{ constat.imagesDeDeuxVehiculesAccidentees }}</td>
                    </tr>
                    <tr>
                        <th>Témoins</th>
                        <td>{{ constat.temoins }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('back_app_auto_constat_index') }}" class="btn btn-primary">back to list</a>

                <a href="{{ path('back_editconstat', {'id': constat.id}) }}" class="btn btn-success">edit</a>


                {{ include('back/auto_constat/_delete_form.html.twig') }}

            </div>
        </div>
    </div>
{% endblock %}
